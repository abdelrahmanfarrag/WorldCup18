<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x_small_margin"
    app:cardCornerRadius="@dimen/medium_margin">

  <android.support.constraint.ConstraintLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/lightRed">

    <ImageView
        android:id="@+id/news_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha=".4"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:fontFamily="@font/autour_one"
        android:padding="@dimen/small_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/small_txt_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/source_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:fontFamily="@font/autour_one"
        android:padding="@dimen/small_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/small_txt_size"
        app:layout_constraintBottom_toBottomOf="@+id/date_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/date_news"/>

    <TextView
        android:id="@+id/title_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/autour_one"
        android:padding="@dimen/small_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/small_txt_size"
        app:layout_constraintBottom_toBottomOf="@+id/news_img"
        app:layout_constraintStart_toStartOf="@+id/date_news"/>

  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>